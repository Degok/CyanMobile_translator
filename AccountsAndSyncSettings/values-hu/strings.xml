    <!-- Title of the feed synchronization activity. -->
    <string name="app_label">Fiókok és szinkronizálás</string>
    <!-- Sync settings -->
    <!-- Main Settings screen setting option name to go into the screen for data sync settings-->
    <string name="sync_settings">Fiókok és szinkronizálás beállításai</string>
    <!-- Error message when the sync tried to delete too many things -->
    <string name="sync_too_many_deletes">A szinkronizálás elérte a törlésre vonatkozó korlátot</string>
    <!-- Data synchronization settings screen, title of setting that controls whether background data should be used -->
    <string name="background_data">Háttéradatok</string>
    <!-- Data synchronization settings screen, summary of setting that controls whether background data should be used -->
    <string name="background_data_summary">Az alkalmazások bármikor szinkronizálhatnak, küldhetnek és fogadhatnak adatokat</string>
    <!-- Data synchronization settings screen, title of dialog that confirms the user's unchecking of background data -->
    <string name="background_data_dialog_title">Figyelem</string>
    <!-- Data synchronization settings screen, message of dialog that confirms the user's unchecking of background data -->
    <string name="background_data_dialog_message">A háttéradatok letiltásával növelheti az akkumulátor élettartamát és csökkentheti az adathasználatot. Egyes alkalmazások azonban továbbra is használhatják a háttérben zajló adatkapcsolatot.</string>
    <!-- Data synchronization settings screen, setting option name -->
    <string name="sync_automatically">Automatikus szinkronizálás</string>
    <!-- Data synchronization settings screen, setting option summary text when check box is selected -->
    <string name="sync_automatically_summary">Az alkalmazások automatikusan szinkronizálják az adatokat</string>
    <!-- Data synchronization settings screen, setting option name -->
    <string name="settings_backup">Biztonsági másolat készítése a beállításokról</string>
    <!-- Data synchronization settings screen, setting option summary text when check box is selected -->
    <string name="settings_backup_summary">Biztonsági másolat készítése a beállításaimról</string>
    <!-- Data synchronization settings screen, menu option -->
    <string name="sync_menu_sync_now">Szinkronizálás most</string>
    <!-- Data synchronization settings screen, menu option -->
    <string name="sync_menu_sync_cancel">Szinkronizálás megszakítása</string>
    <!-- Data synchronization settings screen, summary of a sync provider (for example, Gmail) when autosync is off and the user wants to do a one-time sync. -->
    <string name="sync_one_time_sync">"Érintse meg az azonnali szinkronizáláshoz
"<xliff:g id="last_sync_time">\n%1$s</xliff:g></string>
    <!-- Data synchronization settings screen, checkbox setting option name. Controls whether Gmail should be synced.  Should use "Gmail" to refer to this app.-->
    <string name="sync_gmail">Gmail</string>
    <!-- Data synchronization settings screen, checkbox setting option name. Controls whether Calendar shoudl be synced. -->
    <string name="sync_calendar">Naptár</string>
    <!-- Data synchronization settings screen, checkbox setting option name -->
    <string name="sync_contacts">Címtár</string>
    <!-- Dialog message for when there are too many deletes that would take place and we want user confirmation -->
    <string name="sync_too_many_deletes_desc"><xliff:g id="number_of_deleted_items">%1$d</xliff:g> törölt elem van a(z) <xliff:g id="type_of_sync">%2$s</xliff:g> szinkronizálásánál, a(z) <xliff:g id="account_name">%3$s</xliff:g> fiókban. Mit kíván tenni?</string>
    <!-- Dialog action for when there are too many deletes that would take place and we want user confirmation, and the user wants to delete the items -->
    <string name="sync_really_delete">Az elemek törlése.</string>
    <!-- Dialog action for when there are too many deletes that would take place and we want user confirmation, and the user wants to undo the deletions -->
    <string name="sync_undo_deletes">Törlés visszavonása.</string>
    <!-- Dialog action for when there are too many deletes that would take place and we want user confirmation, and the user wants to do nothing for now -->
    <string name="sync_do_nothing">Ne tegyen semmit.</string>
    <!-- Message when sync is currently failing -->
    <string name="sync_is_failing">A szinkronizálással jelenleg gondok vannak. Hamarosan újra mûködni fog.</string>
    <!-- Message introducing the user to Google Sync. -->
    <string name="sync_plug"><font fgcolor="#ffffffff">Üdvözli a Google Sync!</font>
    \nA Az adatok Google-féle szinkronizálása lehetõvé teszi, hogy bárhonnan hozzáférjen adataihoz.
    </string>

